<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>io.zerows</groupId>
        <artifactId>rachel-momo</artifactId>
        <version>1.0.9</version>
    </parent>

    <artifactId>rachel-momo-sentinel</artifactId>
    <name>Rachel Momo::Sentinel @${cloud-sentinel.version}</name>
    <packaging>pom</packaging>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>com.alibaba.csp</groupId>
                <artifactId>sentinel-core</artifactId>
                <version>${cloud-sentinel.version}</version>
            </dependency>
            <dependency>
                <groupId>com.alibaba.csp</groupId>
                <artifactId>sentinel-parameter-flow-control</artifactId>
                <version>${cloud-sentinel.version}</version>
            </dependency>
            <!-- Sentinel 核心扩展（数据源基础） -->
            <dependency>
                <groupId>com.alibaba.csp</groupId>
                <artifactId>sentinel-datasource-extension</artifactId>
                <version>${cloud-sentinel.version}</version>
            </dependency>

            <!-- Apollo 数据源 -->
            <dependency>
                <groupId>com.alibaba.csp</groupId>
                <artifactId>sentinel-datasource-apollo</artifactId>
                <version>${cloud-sentinel.version}</version>
            </dependency>

            <!-- ZooKeeper 数据源 -->
            <dependency>
                <groupId>com.alibaba.csp</groupId>
                <artifactId>sentinel-datasource-zookeeper</artifactId>
                <version>${cloud-sentinel.version}</version>
            </dependency>

            <!-- Nacos 数据源 -->
            <dependency>
                <groupId>com.alibaba.csp</groupId>
                <artifactId>sentinel-datasource-nacos</artifactId>
                <version>${cloud-sentinel.version}</version>
            </dependency>

            <!-- Redis 数据源 -->
            <dependency>
                <groupId>com.alibaba.csp</groupId>
                <artifactId>sentinel-datasource-redis</artifactId>
                <version>${cloud-sentinel.version}</version>
            </dependency>

            <!-- Consul 数据源 -->
            <dependency>
                <groupId>com.alibaba.csp</groupId>
                <artifactId>sentinel-datasource-consul</artifactId>
                <version>${cloud-sentinel.version}</version>
            </dependency>

            <!-- Web Servlet 适配器 -->
            <dependency>
                <groupId>com.alibaba.csp</groupId>
                <artifactId>sentinel-web-servlet</artifactId>
                <version>${cloud-sentinel.version}</version>
            </dependency>

            <!-- Spring Cloud Gateway 适配器 -->
            <dependency>
                <groupId>com.alibaba.csp</groupId>
                <artifactId>sentinel-spring-cloud-gateway-adapter</artifactId>
                <version>${cloud-sentinel.version}</version>
            </dependency>

            <!-- HTTP 传输客户端（用于连接 Dashboard） -->
            <dependency>
                <groupId>com.alibaba.csp</groupId>
                <artifactId>sentinel-transport-simple-http</artifactId>
                <version>${cloud-sentinel.version}</version>
            </dependency>

            <!-- 注解支持（基于 AspectJ） -->
            <dependency>
                <groupId>com.alibaba.csp</groupId>
                <artifactId>sentinel-annotation-aspectj</artifactId>
                <version>${cloud-sentinel.version}</version>
            </dependency>

            <!-- Reactor 响应式适配器 -->
            <dependency>
                <groupId>com.alibaba.csp</groupId>
                <artifactId>sentinel-reactor-adapter</artifactId>
                <version>${cloud-sentinel.version}</version>
            </dependency>

            <!-- 集群流控 - 服务端 -->
            <dependency>
                <groupId>com.alibaba.csp</groupId>
                <artifactId>sentinel-cluster-server-default</artifactId>
                <version>${cloud-sentinel.version}</version>
            </dependency>

            <!-- 集群流控 - 客户端 -->
            <dependency>
                <groupId>com.alibaba.csp</groupId>
                <artifactId>sentinel-cluster-client-default</artifactId>
                <version>${cloud-sentinel.version}</version>
            </dependency>

            <!-- WebFlux 适配器 -->
            <dependency>
                <groupId>com.alibaba.csp</groupId>
                <artifactId>sentinel-spring-webflux-adapter</artifactId>
                <version>${cloud-sentinel.version}</version>
            </dependency>

            <!-- API 网关通用适配器 -->
            <dependency>
                <groupId>com.alibaba.csp</groupId>
                <artifactId>sentinel-api-gateway-adapter-common</artifactId>
                <version>${cloud-sentinel.version}</version>
            </dependency>

            <!-- Spring Web MVC v6.x 适配器（用于 Spring 6+） -->
            <dependency>
                <groupId>com.alibaba.csp</groupId>
                <artifactId>sentinel-spring-webmvc-v6x-adapter</artifactId>
                <version>${cloud-sentinel.version}</version>
            </dependency>

            <!-- Dubbo 2.x 适配器 -->
            <dependency>
                <groupId>com.alibaba.csp</groupId>
                <artifactId>sentinel-dubbo-adapter</artifactId>
                <version>${cloud-sentinel.version}</version>
            </dependency>

            <!-- Apache Dubbo 2.7+ 适配器 -->
            <dependency>
                <groupId>com.alibaba.csp</groupId>
                <artifactId>sentinel-apache-dubbo-adapter</artifactId>
                <version>${cloud-sentinel.version}</version>
            </dependency>

            <!-- Apache Dubbo 3.x 适配器 -->
            <dependency>
                <groupId>com.alibaba.csp</groupId>
                <artifactId>sentinel-apache-dubbo3-adapter</artifactId>
                <version>${cloud-sentinel.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

</project>